# BNB-ASTERUSDT 实例配置
INSTANCE_NAME=BNB_ASTER
TRADE_SYMBOL=ASTERUSDT

# 静态风险管理，固定获利和止损回撤
TRADE_AMOUNT=20
LOSS_LIMIT=0.03
TRAILING_PROFIT=0.18
TRAILING_CALLBACK_RATE=0.18

# 止盈止损设置
PROFIT_LOCK_TRIGGER_USD=0.06
PROFIT_LOCK_OFFSET_USD=0.03

# 性能设置 (错峰轮询避免冲突)
POLL_INTERVAL_MS=700
MAX_LOG_ENTRIES=200
KLINE_INTERVAL=1m

# 交易精度设置 (ASTER参数)
PRICE_TICK=0.0001
QTY_STEP=1
MAX_CLOSE_SLIPPAGE_PCT=0.5

# 手续费监控设置
FEE_RATE=0.0005
MAX_DAILY_FEE_PCT=1.5
MAX_HOURLY_FEE_PCT=0.4
FEE_WARNING_THRESHOLD=1.0
ENABLE_FEE_PROTECTION=true
LOG_FEE_SUMMARY_INTERVAL=300000
RESET_FEE_COUNTER_HOUR=0

# 动态风险管理，获利和止损是百分比
ENABLE_DYNAMIC_RISK=true
DYNAMIC_RISK_THRESHOLD=0.015
RISK_PERCENTAGE=0.0075
PROFIT_TARGET_PERCENTAGE=0.015

# Redis配置 (使用独立数据库)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4
REDIS_KEY_PREFIX=ritmex_bnb_aster_

# 增强分析配置
ENHANCED_MODE_ENABLED=false
CONFIDENCE_THRESHOLD=0.65
ANALYSIS_INTERVAL=40000
MIN_SIGNAL_INTERVAL=50000

# API配置 (BNB API密钥2 - 如果有第二个)
ASTER_API_KEY=your_second_bnb_api_key
ASTER_API_SECRET=your_second_bnb_api_secret
ASTER_API_URL=https://api.aster-bot.com

# 日志配置
LOG_LEVEL=info
LOG_PREFIX=[BNB-ASTER]
